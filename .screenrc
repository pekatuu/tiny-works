hardstatus alwayslastline "%{= 80}%-Lw%25>%{+b WB}%n%f %t%{-}%75>%+Lw%<"

defscrollback 10000
term xterm-256color

# window movement
bind ^u eval "focus left" "focus up"
bind ^i eval "focus right" "focus up"
bind ^j eval "focus left" "focus down"
bind ^k eval "focus right" "focus down"

bind ^o layout next

escape ^t^t

layout new
layout new
screen 0
screen 1
