caption always "%{=r dd}%-Lw%40L>%?%F%{=b kg}%:[%? %n%f %t %?%F%{-}%:]%?%+Lw %?%F%-024=GNU Screen of Git master%:%=%?"
hardstatus alwayslastline "%{= dd}[%Y-%m-%d %c] %`"
backtick 0 3 3 monitor.rb

defscrollback 10000
term xterm-256color

# window movement
bind ^u eval "focus left" "focus up"
bind ^i eval "focus right" "focus up"
bind ^j eval "focus left" "focus down"
bind ^k eval "focus right" "focus down"

bind ^o layout next

escape ^t^t

layout new
layout new
screen 0
screen 1
