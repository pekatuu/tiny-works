caption always "%?%F%{= $SCREEN_CAPTION_NONE}%:%{r dd}%?%-Lw%?%F%{= $SCREEN_CAPTION_SELECTED}%?%n%f %t%{-}%?%50L>%+Lw%<"
hardstatus alwayslastline "%{= dd}[%Y-%m-%d %c] %`"
backtick 0 1 1 monitor.rb

startup_message off
vbell off
defscrollback 10000

defbce on
term xterm-256color

# window movement
bind ^u eval "focus left" "focus up"
bind ^i eval "focus right" "focus up"
bind ^j eval "focus left" "focus down"
bind ^k eval "focus right" "focus down"

bind ^o layout next

escape ^Tt

layout new
layout new
screen 0
screen 1
